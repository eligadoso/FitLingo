<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:orientation="vertical"
  android:background="@color/color_surface"
  android:padding="@dimen/space_4">

  <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">
    <TextView android:id="@+id/workout_type" android:textSize="@dimen/text_base" android:textColor="@color/color_text"/>
    <Space android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"/>
    <TextView android:id="@+id/workout_intensity" android:textSize="@dimen/text_xs" android:textColor="@color/color_text_light"/>
  </LinearLayout>

  <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:layout_marginTop="@dimen/space_3">
    <TextView android:id="@+id/workout_date" android:textSize="@dimen/text_sm" android:textColor="@color/color_text_light"/>
    <TextView android:id="@+id/workout_duration" android:textSize="@dimen/text_sm" android:textColor="@color/color_text_light"/>
    <TextView android:id="@+id/workout_distance" android:textSize="@dimen/text_sm" android:textColor="@color/color_text_light"/>
  </LinearLayout>

  <TextView android:id="@+id/workout_notes" android:textSize="@dimen/text_sm" android:textColor="@color/color_text_light" android:layout_marginTop="@dimen/space_3"/>

  <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginTop="@dimen/space_3">
    <Button android:id="@+id/btn_share" style="@style/FitApp.Button.Secondary" android:text="Compartir" android:onClick="onShareWorkout"/>
    <Space android:layout_width="@dimen/space_2" android:layout_height="wrap_content"/>
    <Button android:id="@+id/btn_edit" style="@style/FitApp.Button.Secondary" android:text="Editar" android:onClick="onEditWorkout"/>
    <Space android:layout_width="@dimen/space_2" android:layout_height="wrap_content"/>
    <Button android:id="@+id/btn_delete" style="@style/FitApp.Button.Secondary" android:text="Eliminar" android:onClick="onDeleteWorkout"/>
  </LinearLayout>

</LinearLayout>
