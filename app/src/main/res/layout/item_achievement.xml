<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:orientation="vertical"
  android:background="@color/color_surface"
  android:padding="@dimen/space_4">

  <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
    <TextView android:id="@+id/achievement_title" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:textSize="@dimen/text_base" android:textColor="@color/color_text"/>
    <Button android:id="@+id/btn_share_achievement" android:layout_width="wrap_content" android:layout_height="wrap_content" style="@style/FitApp.Button.Secondary" android:text="Compartir"/>
  </LinearLayout>
  <TextView android:id="@+id/achievement_desc" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textSize="@dimen/text_sm" android:textColor="@color/color_text_light" android:layout_marginTop="@dimen/space_2"/>
  <TextView android:id="@+id/achievement_date" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textSize="@dimen/text_xs" android:textColor="@color/color_text_light" android:layout_marginTop="@dimen/space_2"/>

</LinearLayout>
