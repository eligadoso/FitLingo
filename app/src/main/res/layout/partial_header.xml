<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:background="@color/color_surface"
  android:orientation="vertical">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/space_3"
    android:paddingRight="@dimen/space_3"
    android:paddingTop="@dimen/space_3"
    android:paddingBottom="@dimen/space_3"
    android:orientation="horizontal">

    <LinearLayout
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:orientation="horizontal">

      <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@mipmap/fitlingo"
        android:contentDescription="@string/app_name"/>

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_3"
        android:text="@string/app_name"
        android:textStyle="bold"
        android:textSize="@dimen/text_xl"
        android:textColor="@color/color_text"/>
    </LinearLayout>

    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal">
      <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
          android:id="@+id/header_user_name"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="@dimen/text_sm"
          android:textColor="@color/color_text"/>
        <TextView
          android:id="@+id/header_user_email"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="@dimen/text_xs"
          android:textColor="@color/color_text_light"/>
      </LinearLayout>
      <ImageButton
        android:id="@+id/btn_logout"
        android:layout_width="48dp"
        android:layout_height="48dp"
          android:src="@drawable/logout"
        android:onClick="onLogoutClick"
        style="@style/FitApp.Button.Secondary"
          android:contentDescription="Salir"/>
    </LinearLayout>
  </LinearLayout>

  <HorizontalScrollView
      android:layout_width="match_parent"
      android:layout_height="58dp"
      android:paddingLeft="@dimen/space_3"
      android:paddingRight="@dimen/space_3">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

      <ImageButton
          android:id="@+id/nav_dashboard"
          style="@style/FitApp.Button.Secondary"
          android:layout_width="48dp"
          android:layout_height="48dp"
          android:contentDescription="Dashboard"
          android:onClick="onNavDashboard"
          android:src="@drawable/dashboard" />

      <Space
          android:layout_width="@dimen/space_2"
          android:layout_height="wrap_content" />

      <ImageButton
          android:id="@+id/nav_workouts"
          style="@style/FitApp.Button.Secondary"
          android:layout_width="48dp"
          android:layout_height="48dp"
          android:contentDescription="Entrenamientos"
          android:onClick="onNavWorkouts"
          android:src="@drawable/workouts" />

      <Space
          android:layout_width="@dimen/space_2"
          android:layout_height="wrap_content" />

      <ImageButton
          android:id="@+id/nav_achievements"
          style="@style/FitApp.Button.Secondary"
          android:layout_width="48dp"
          android:layout_height="48dp"
          android:contentDescription="Logros"
          android:onClick="onNavAchievements"
          android:src="@drawable/achievements" />

      <Space
          android:layout_width="@dimen/space_2"
          android:layout_height="wrap_content" />

      <ImageButton
          android:id="@+id/nav_social"
          style="@style/FitApp.Button.Secondary"
          android:layout_width="48dp"
          android:layout_height="48dp"
          android:contentDescription="Social"
          android:onClick="onNavSocial"
          android:src="@drawable/social" />

      <Space
          android:layout_width="@dimen/space_2"
          android:layout_height="wrap_content" />

      <ImageButton
          android:id="@+id/nav_profile"
          style="@style/FitApp.Button.Secondary"
          android:layout_width="48dp"
          android:layout_height="48dp"
          android:contentDescription="Perfil"
          android:onClick="onNavProfile"
          android:src="@drawable/profile" />
    </LinearLayout>
  </HorizontalScrollView>

</LinearLayout>
